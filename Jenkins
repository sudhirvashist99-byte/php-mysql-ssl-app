pipeline {
    agent { label 'BhServer' }
    environment {
        SSL_DIR = "${WORKSPACE}/nginx/ssl"
        DOCKER_COMPOSE_DIR = "${WORKSPACE}"
    }

    stages {
        stage('Cleanup Old Docker Data') {
            steps {
                sh '''
                    docker ps -aq | xargs -r docker stop
                    docker ps -aq | xargs -r docker rm
                    docker system prune -af --volumes
                '''
            }
        }

        stage('Code Clone') {
            steps {
                git url: "https://github.com/sudhirvashist99-byte/php-mysql-nginix-ssl-app.git", branch: "main"
            }
        }

        stage('Generate SSL Certificate') {
            steps {
                sh '''
                    mkdir -p nginx/ssl
                    openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
                        -subj "/C=IN/ST=State/L=City/O=Org/OU=IT/CN=localhost" \
                        -keyout nginx/ssl/nginx-selfsigned.key \
                        -out nginx/ssl/nginx-selfsigned.crt
                '''
            }
        }

        stage('Build') {
            steps {
                sh "docker compose build"
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    docker compose down
                    docker compose up -d
                '''
            }
        }
    }
}